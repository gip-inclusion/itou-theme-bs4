      <script>
        $('.c-form-uploaded-img-list__edit').on('click tap', function(e) {
          e.preventDefault();
          let thisParent = $(this).closest('li');
          thisParent.find('.c-form-uploaded-img-list__viewzone').css('display', 'none');
          thisParent.find('.c-form-uploaded-img-list__editzone').css('display', 'flex');
        });

        $('.c-form-uploaded-img-list__cancel').on('click tap', function(e) {
          e.preventDefault();
          let thisParent = $(this).closest('li');
          thisParent.find('.c-form-uploaded-img-list__viewzone').css('display', 'flex');
          thisParent.find('.c-form-uploaded-img-list__editzone').css('display', 'none');
        });

        $('[data-imgurl]').on('click tap', function(e) {
          let thisImgUrl = $(this).data('imgurl');
          let thisModalTarget = $(this).data('target');
          $(thisModalTarget).find('img').attr('src', thisImgUrl);
        });
      </script>



